<div class="bg-profissional">
  <button id="openbtn" class="openbtn" onclick="openNav()">&#9776;</button>

  <h5 class="nome-user">
    <%= @professional_user.name %>
  </h5>

  <!-- SIDEBAR -->
  <nav id="mySidebar" class="sidebar">
    <div class="sidebar-header">
      <a href="javascript:void(0)" class="closebtn sidebar-header" onclick="closeNav()">&times;</a>
      <%= @professional_user.name %>
      <hr>
    </div>
    <div class="sidebar-links">
      <%= link_to "Conta", edit_professional_user_path %>
      <%= link_to "Endereços", temp_path %>
      <a class="click-modal" data-toggle="modal" data-target="#modal-mensagem">Suporte</a>
      <%= link_to 'Sair', sairprofissional_path, method: :delete %>
    </div>
  </nav>

    <div class="div-profile center">
      <% if @professional_user.avatar.attached? %>
        <%= image_tag @professional_user.avatar,
          :alt => "profile picture",
          class: "img-profile" %>
      <% else %>
          <%= image_tag 'no_avatar.jpg',
          :alt => "No profile picture",
          class: "img-profile" %>
      <% end %>
    </div>
</div>

<div id="conteudo" class="main">
  <div class="container">
    <div class="left">
      <%= link_to fa_icon("facebook"), temp_path %>
      <%= link_to fa_icon("instagram"), "https:www.instagram.com/" + @professional_user.instagram %>

    <div class="right">
      <%= link_to fa_icon("bell"), temp_path %>
      <%= link_to fa_icon("envelope"), temp_path %>
      <%= link_to fa_icon("star"), temp_path %>
      <span class="avaliacao">4.5</span>
  </div>
  <br><br><br><br>
  <form>
    <div class="form-group">
      <textarea class="form-control" rows="3" placeholder="Escreva um pouco sobre você"><%=@professional_user.description%></textarea>
    </div>
    </form>
    <div class="row container">
      <%= link_to meus_servicos_path, class: "col-md-4" do %>
        <div class="card-atendimento">
          <h5>SERVIÇOS</h5>
        </div>
      <%end%>

      <%= link_to temp_path, class: "col-md-4" do %>
        <div class="card-atendimento">
          <h5>ATENDIMENTOS MARCADOS</h5>
        </div>
      <%end%>

      <%= link_to temp_path, class: "col-md-4" do %>
        <div class="card-atendimento">
          <h5>HISTÓRICO DE ATENDIMENTOS</h5>
        </div>
      <%end%>
    </div><!-- Row -->

  </div> <!-- Container -->
</div>
