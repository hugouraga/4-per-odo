<div class="row">
  <div class="col-xs-12">    
  </div>

  <div class="col-md-6 col-md-offset-3 col-xs-12">
    <h1>Meus Serviços</h1>



<table class="table table-striped">
  <thead>
    <tr>
      <th>Serviço</th>
      <th>Descrição</th>
      <th>Preço</th>
      <th>Duração</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>
<% if @services.empty? %>
          <tr>
            <td colspan="4" class="text-center">
              <h3>Sem serviços cadastrados.</h3>
              <%= link_to 'click aqui', '#' %> para cadastrar um novo contato
            </td>
          </tr>
        <% end %>
  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.service %></td>
        <td><%= service.description %></td>
        <td><%= service.value %></td>
        <td><%= service.duration %></td>
        <td><%= service.email %></td>
        <td><%= link_to 'Detalhes', service %></td>
        <td><%= link_to 'Editar', edit_service_path(service) %></td>
        <td><%= link_to 'Apagar', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adicionar serviço', new_service_path %>
