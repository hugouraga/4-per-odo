  <% if service.errors.any? %>
    <div>
    <div class="alert alert-danger">
      <ul>
      <h3>Ops! Encontramos <%= pluralize(service.errors.count, 'erro', 'erros') %> </h3>


      <% service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :service, placeholder: 'Serviço *', class: 'form-control', :required => true %>
  </div>

  <div class="form-group">
    <%= form.text_area :description, placeholder: 'Descrição *', class: 'form-control', :required => true %>
  </div>

  <div class="form-group">
    <%= form.number_field :value, placeholder: 'Preço *', class: 'form-control', :required => true %>
  </div>

  <div class="form-group">
    <%= form.number_field :duration, placeholder: 'Duração *', max: 9, class: 'form-control', :required => true %>
  </div>

  <hr>
  <div class="center">
    <h5 class="btn btn-warning"><strong>Selecione pelo menos um dia e um turno</strong></h5>
  </div>

  <%= render "schedules/form", form: form %>

  <hr>
