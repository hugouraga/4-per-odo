<%= form_with(model: service, local: true) do |form| %>
  <% if service.errors.any? %>
    <div clas="">
    <div class="alert alert-danger">    
      <ul>
      <h3>Ops! Encontramos <%= pluralize(service.errors.count, 'erro', 'erros') %> </h3>

      
      <% service.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    </div>
  <% end %>

  <div class="form-group">
    
    <%= form.text_field :service, placeholder: 'Serviço', class: 'form-control' %>
  </div>

  <div class="form-group">
    
    <%= form.text_field :description, placeholder: 'Descrição', class: 'form-control' %>
  </div>

  <div class="form-group">
    
    <%= form.text_field :value, placeholder: 'Preço', class: 'form-control' %>
  </div>

  <div class="form-group">
    
    <%= form.text_field :duration, placeholder: 'Duração', class: 'form-control' %>
  </div>

  <div class="form-group">
    
    <%= form.text_field :email, placeholder: 'corrigir essa parte', class: 'form-control' %>
  </div>
  
  <div class="form-group">
    
    <%= form.text_field :address, placeholder: 'corrigir aqui tb', class: 'form-control' %>
  </div>

  <div class="actions">
    <div class="center">
      <%= form.submit 'Cadastrar' , class: 'btn btn-verde' %>
    </div>

    <div class="center">
      <%= link_to 'Voltar', temp_path , class: 'btn btn-cinza' %>
    </div>
<% end %>
