<div class="row">

    <div id="logo-login" class="row">
        <%= image_tag "logo.png",
         :alt => "Descricao img",
        :width => "150px",
        :height => "150px" %>
    </div>

    <div class="row">
        <h2 class="nome-app">Iggle</h2>
    </div>
    <br>

    <div class="row">
        <%= form_for :session, url: entrar_path, method: :post do |f| %>
            
            <div class="form-group col-md-6 col-md-offset-3 col-xs-12">
                <%= f.label :email %>
                <%= f.email_field :email, placeholder: 'Email', class: 'form-control' %>
            </div>

            
            <div class="form-group col-md-6 col-md-offset-3 col-xs-12">
                <%= f.label :password %>
                <%= f.password_field :password, placeholder: 'Senha', class: 'form-control' %>
            </div>
           

            <div class="col-md-6 col-md-offset-5 col-xs-12">
                <%= f.submit 'Entrar', class: 'btn btn-verde' %>
            <div>
        <% end %>
    </div>
</div>


